@model RegistrationRequestDto

<form asp-action="Register">
    <div class="container border p-md-3 plg-4">
        <div class="row text-center p-3">
            <h1>Register</h1>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 col-sm-2 offset-lg-3 offset-md-3 offset-sm-0 pb-2">
                <input asp-for="Email" class="form-control" placeholder="Email..." />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 col-sm-2 offset-lg-3 offset-md-3 offset-sm-0 pb-2">
                <input asp-for="FullStdId" class="form-control text-capitalize" placeholder="Full Student Id..." />
                <span asp-validation-for="FullStdId" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 col-sm-2 offset-lg-3 offset-md-3 offset-sm-0 pb-2">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password..." />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 col-sm-2 offset-lg-3 offset-md-3 offset-sm-0 pb-2">
                <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber..." />
                <span asp-validation-for="PhoneNumber" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 col-sm-2 offset-lg-3 offset-md-3 offset-sm-0 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Register</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}